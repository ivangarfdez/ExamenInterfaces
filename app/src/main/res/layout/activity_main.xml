<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtnombre"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/escribenombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/eligesexo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:id="@+id/txtlocalizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Localizacion"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/escribelocalizacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/txtLocalizacion" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="81dp">

        <RadioGroup
            android:id="@+id/eligesexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnmujer"
            android:weightSum="1"
            android:layout_gravity="right|top">


        </RadioGroup>

        <RadioButton
            android:id="@+id/btnmujer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:checked="false"
            android:text="Mujer"
            android:layout_marginEnd="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <RadioButton
            android:id="@+id/btnhombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:checked="false"
            android:text="Hombre"
            android:layout_below="@+id/btnmujer"
            android:layout_alignStart="@+id/btnmujer"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="178dp"
        android:layout_height="match_parent"
        android:layout_gravity="right">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FloridaOberta"
            android:id="@+id/button3"
            android:onClick="floridaoberta"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="68dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar"
            android:id="@+id/btnSeleccionar"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>



</LinearLayout>
